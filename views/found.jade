h1.main Posts by tag - #{querytag}

h3.indexheader Descending order by date

for post in foundPosts
   div.items  
      - link = post._id + '/' + post.subject.split(' ').join('_');
      a.postlink(href="/posts/#{link}/")
         div.fpposted!= moment(post.created).format('DD / MM <b>YYYY</b>')
         h2 #{post.subject}
      div.fpblogpost
         h3 #{post.subtitle}
      p.tags
         for tag in post.tags
            a.tag(href="/search/tags/#{tag}") #{tag} 
