-if (flash)
  -if (flash.error)
    p.flash.error #{flash.error}
  -if (flash.info)
    p.flash.info #{flash.info} 
article
  h1 #{post.subject}
  div.body!= post.body
div.tags
    for tag in post.tags
      a.tag(href="/posts/tags/#{tag}") #{tag}
div.posted Posted: #{moment(post.created).format('DD.MM.YYYY HH:mm')} by: #{post.author.username}

- if (user)
    div.edit
      a(href="/posts/edit/#{post._id}") Edit post
      span.divider |
      a(href="/posts/remove/#{post._id}", onClick="return confirm('Sure about that?')") Delete post

div.commentsection
  h3 Comments

  - if (post.comments)
      for comment in post.comments
        div.comment
          - if (user)
              div
                a(href="/posts/edit/comment/#{comment._id}") Edit comment
                span.divider |
                a(href="/posts/remove/comment/#{comment._id}", onClick="return confirm('Sure about that?')") Delete comment
          p!= comment.body
          p.posted posted #{moment(comment.created).fromNow()} by #{comment.name}

  h3 Add comment
  form(name="add-comment",method="post",action="/posts/comment")
    input(type="hidden",name="postid",value="#{post._id}")
    p  
      label Name
        input(type="text", name="name", required)
    p  
      label email
        input(type="email", name="email", required)
    textarea.rte-zone(placeholder="Comment goes here", name="body", rows="6", cols="60", maxlength="550")
    p
      input(type="submit",name="post",value="Comment")