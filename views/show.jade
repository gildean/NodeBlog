-if (flash)
  -if (flash.error)
    p.flash.error #{flash.error}
  -if (flash.info)
    p.flash.info #{flash.info} 
article
  - if (user)
    div.edit
      a(href="/posts/edit/#{post._id}") Edit post
      span.divider |
      a(href="/posts/remove/#{post._id}", onClick="return confirm('Sure about that? All comments will also be removed.')") Delete post
  h1 #{post.subject}
  div.body!= post.body
div.tags
    for tag in post.tags
      a.tag(href="/posts/tags/#{tag}") #{tag}
div.author <i>posted:</i> #{moment(post.created).fromNow()} <br>
   <i>by:</i> #{post.author.username}


div.commentsection
  h3 Comments

  - if (post.comments)
     for comment in post.comments
        div.comment
          - if (user)
              div
                 a(href="/posts/hide/comment/#{comment._id}") Hide
                 span.divider |
                 a(href="/posts/edit/comment/#{comment._id}") Edit
                 span.divider |
                 a(href="/posts/remove/comment/#{comment._id}", onClick="return confirm('Sure about that?')") Delete
          p!= comment.body
          p.posted posted #{moment(comment.created).fromNow()} by #{comment.name}

  - if (user) 
    - if (post.hidden)
        h3 Comments to review:
        for hidden in post.hidden
           div.comment
              div
                 a(href="/posts/publish/comment/#{hidden._id}") Publish
                 span.divider |
                 a(href="/posts/edit/comment/#{hidden._id}") Edit
                 span.divider |
                 a(href="/posts/remove/comment/#{hidden._id}", onClick="return confirm('Sure about that?')") Delete
              p!= hidden.body
              p.posted posted #{moment(hidden.created).fromNow()} by #{hidden.name} from #{hidden.from}
  h3 Comments, please:
  form(name="add-comment",method="post",action="/posts/comment")
    input(type="hidden",name="postid",value="#{post._id}")
    p
       label Name
       input(type="text", name="name", required)  
    p
       label Email
       input(type="email", name="email", class="email", required)
    textarea.rte-zone(placeholder="Comment goes here", name="body", rows="6", cols="60", maxlength="550")
    input(type="hidden", class="for-bots", name="address", value="", required)
    div#submit-slider
    p.disclaimer note that your ip is recorded upon submit, please do not spam<br>
       | comments will be reviewed before publishing
